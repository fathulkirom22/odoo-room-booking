<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_room_booking_tree" model="ir.ui.view">
        <field name="name">room.booking.tree</field>
        <field name="model">room.booking</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="room_id"/>
                <field name="booking_name"/>
                <field name="booking_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_room_booking_form" model="ir.ui.view">
        <field name="name">room.booking.form</field>
        <field name="model">room.booking</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="room_id"/>
                        <field name="booking_name"/>
                        <field name="booking_date"/>
                        <field name="status" readonly="1"/>
                        <field name="notes"/>
                    </group>
                    <footer>
                        <button name="action_confirm" type="object" string="Proses Pemesanan" 
                                modifiers="{'invisible': [['status', '!=', 'draft']]}"/>
                        <button name="action_done" type="object" string="Selesaikan Pemesanan"
                                modifiers="{'invisible': [('status', '!=', 'on_going')]}"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
